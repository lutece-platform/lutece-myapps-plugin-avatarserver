<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?><plug-in>
    <name>avatarserver</name>
    <class>fr.paris.lutece.plugins.avatarserver.service.AvatarServerPlugin</class>
    <version>1.2.3</version>
    <documentation/>
    <installation/>
    <changes/>
    <user-guide/>
    <description>avatarserver.plugin.description</description>
    <provider>avatarserver.plugin.provider</provider>
    <provider-url>http://fr.lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/avatarserver/avatarserver.png</icon-url>
    <copyright>Copyright (c) 2015 Mairie de Paris</copyright>
    <db-pool-required>1</db-pool-required>
    
    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>AVATARSERVER_MANAGEMENT</feature-id>
            <feature-title>avatarserver.adminFeature.ManageAvatarserver.name</feature-title>
            <feature-description>avatarserver.adminFeature.ManageAvatarserver.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/avatarserver/ManageAvatars.jsp</feature-url>
            <feature-icon-url/>
      </admin-feature>
    </admin-features>  
    
        
    <!-- XPages -->
    <applications>
        <application>
            <application-id>avatarserver</application-id>
            <application-class>fr.paris.lutece.plugins.avatarserver.web.AvatarServerApp</application-class>
        </application>
    </applications>
    
    <!-- servlets -->
     <servlets>
          <servlet>
               <servlet-name>avatarserverPost</servlet-name>
               <url-pattern>/servlet/plugins/avatarserver/post</url-pattern>
               <servlet-class>fr.paris.lutece.plugins.avatarserver.web.PostAvatarServlet</servlet-class>
          </servlet>
     </servlets>
    

</plug-in>